# Vault Connection
VAULT_ADDR=http://vault:8200
VAULT_AUTH_METHOD=token
VAULT_TOKEN=s.your-vault-token-here

# Backup Provider
BACKUP_PROVIDER=azure
AZURE_STORAGE_ACCOUNT=mystorageaccount
AZURE_STORAGE_CONTAINER=vault-snapshots

# Azure Authentication (choose one method)
# Method 1: Service Principal
AZURE_CLIENT_ID=your-client-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_SECRET=your-client-secret

# Method 2: SAS Token (comment out SP creds if using this)
# AZURE_STORAGE_SAS=?sv=2025-01-05&ss=b&srt=sco&sp=rwdlacx&se=...

# Backup Configuration
BACKUP_SOURCE=/data/snapshot.snap
BACKUP_TARGET=snapshots

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
